<h2>Books#index</h2>
<!--<p>Find me in app/views/books/new.html.erb</p>-->
<% @books.each do |book| %>
    <div class="box">
        <span><%= book.title %></span>
        <span><%= book.body %></span>
        <span><%= link_to "Show", book_path(book) %></span>
        <span><%= link_to "Edit", edit_book_path(book) %></span>
        <span><%= link_to "Destroy", book_path(book), method: :delete %></span>
    </div>
<% end %>
<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>
<%# ここから %>
    <% if @book.errors.any? %>
    <div>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
<%# ここまで %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Creat Book' %>
<% end %>